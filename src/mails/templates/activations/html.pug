style(type="text/css").
    p,
    a,
    strong,
    blockquote {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        padding: 0; margin: 0; background-color: #f7f7f7; padding-top: 1px;
    }
    .wrapper {
        max-width: 600px; border-radius: 3px; overflow: hidden; margin: 60px auto; display: block;
    }
    .header {
        height: 93px; line-height: 93px; padding: 0 40px; background-color: #009ada;
    }
    .body {
        padding: 40px; background-color: #ffffff;
    }
    blockquote, p {
        color: #000000;
        margin-bottom: 29px;
        font-size: 14px;
        line-height: 24px;
        font-weight: 400;
        opacity: 0.9;
    }

    blockquote {
        margin: 0px;
        background-color: #edf1f5;
        padding: 40px;
    }

    hr {
        margin: 30px 0;
        color: #dbdede;
    }

    a {
        text-decoration: none;
        color: #009ada;
    }

    .title {
        color: #ffffff;
        font-size: 24px;
        font-weight: 600;
    }

    .subtitle {
        color: #000000;
        font-size: 22px;
    }

    .gray {
        color: #6f7780;
    }

    .link-button {
        width: 255px;
        background-color: #009ada;
        border-radius: 5px;
        height: 43px;
        line-height: 43px;
        color: #ffffff;
        font-size: 16px;
        font-weight: 700;
        text-align: center;
    }

    .link-button a {
        color: #ffffff;
    }
